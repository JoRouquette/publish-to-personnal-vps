{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,

    "module": "ESNext",
    "target": "ES6",

    "allowJs": false,
    "noImplicitAny": true,
    "strict": true,
    "strictNullChecks": true,

    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,

    "lib": ["DOM", "ES6"]
  },
  "include": ["obsidian-plugin/**/*.ts", "core-publishing/**/*.ts"]
}
